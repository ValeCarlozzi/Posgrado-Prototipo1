{% extends 'base.html.twig' %}

{% block title %}Listado de Dictados de Curso{% endblock %}

{% block body %}
    <h1>Listado de Dictados de Curso</h1>
    <a href="{{ path('dictado_new') }}">Nuevo Dictado</a>
    <table border="1" cellpadding="5">
        <thead>
            <tr>
                <th>ID</th>
                <th>Curso</th>
                <th>Fecha Inicio</th>
                <th>Fecha Fin</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for dictado in dictados %}
            <tr>
                <td>{{ dictado.id }}</td>
                <td>{{ dictado.curso ? dictado.curso.nombre : '' }}</td>
                <td>{{ dictado.fechaInicio ? dictado.fechaInicio|date('Y-m-d') : '' }}</td>
                <td>{{ dictado.fechaFin ? dictado.fechaFin|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('dictado_show', {'id': dictado.id}) }}">Ver</a> |
                    <a href="{{ path('dictado_edit', {'id': dictado.id}) }}">Editar</a> |
                    <form method="post" action="{{ path('dictado_delete', {'id': dictado.id}) }}" style="display:inline" onsubmit="return confirm('Â¿Seguro que deseas eliminar este dictado?');">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ dictado.id) }}">
                        <button type="submit">Eliminar</button>
                    </form>
                </td>
            </tr>
        {% else %}
            <tr><td colspan="5">No hay dictados registrados.</td></tr>
        {% endfor %}
        </tbody>
    </table>
    <a href="{{ path('alumno_index') }}">Volver a Alumnos</a>
{% endblock %} 