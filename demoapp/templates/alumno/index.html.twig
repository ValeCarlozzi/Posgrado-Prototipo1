{% extends 'base.html.twig' %}

{% block title %}Listado de Alumnos{% endblock %}

{% block body %}
    <h1>Listado de Alumnos</h1>
    <a href="{{ path('alumno_new') }}">Nuevo Alumno</a>
    <table border="1" cellpadding="5">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nombre</th>
                <th>Apellido</th>
                <th>Email</th>
                <th>DNI</th>
                <th>CUIL</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for alumno in alumnos %}
            <tr>
                <td>{{ alumno.id }}</td>
                <td>{{ alumno.nombre }}</td>
                <td>{{ alumno.apellido }}</td>
                <td>{{ alumno.email }}</td>
                <td>{{ alumno.dni }}</td>
                <td>{{ alumno.cuil }}</td>
                <td>
                    <a href="{{ path('alumno_show', {'id': alumno.id}) }}">Ver</a> |
                    <a href="{{ path('alumno_edit', {'id': alumno.id}) }}">Editar</a> |
                    <form method="post" action="{{ path('alumno_delete', {'id': alumno.id}) }}" style="display:inline" onsubmit="return confirm('Â¿Seguro que deseas eliminar este alumno?');">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ alumno.id) }}">
                        <button type="submit">Eliminar</button>
                    </form>
                </td>
            </tr>
        {% else %}
            <tr><td colspan="7">No hay alumnos registrados.</td></tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %} 